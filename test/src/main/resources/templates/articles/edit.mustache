{{>layouts/header}}
{{#article}}
<form class="container" action="/articles/update" method="post">
    <input name="id" type="hidden" value="{{id}}"/>
    <div>
        <p>제목</p>
        <input type="text" class="mb-3" name="title" value="{{title}}">
    </div>
    <div>
        <p>내용</p>
        <textarea class="mb-3" name="content">{{content}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">제출</button>
    <a href="/articles/{{id}}">Back</a>
</form>
{{/article}}
{{>layouts/footer}}
